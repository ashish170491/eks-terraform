# AWS Configuration
aws_region = "us-west-2"
aws_profile = "default"

# Alternative: Use access keys (NOT recommended for production)
# aws_access_key = "your-access-key-id"
# aws_secret_key = "your-secret-access-key"

# Project Configuration
environment = "dev"
project     = "eks-terraform"
owner       = "your-name"

# VPC Configuration
vpc_name = "eks-vpc"
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]

# Subnet Configuration
private_subnets  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets   = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]
database_subnets = ["10.0.201.0/24", "10.0.202.0/24", "10.0.203.0/24"]

# VPC Features
enable_nat_gateway   = true
single_nat_gateway   = true
enable_dns_hostnames = true
enable_dns_support   = true

# EKS Cluster Configuration
cluster_name    = "my-eks-cluster"
cluster_version = "1.27"

# Node Group Configuration
node_group_name           = "eks-worker-nodes"
node_group_instance_types = ["t3.medium"]
node_group_ami_type      = "AL2_x86_64"
node_group_capacity_type = "ON_DEMAND"

# Scaling Configuration
node_group_desired_size = 2
node_group_max_size     = 4
node_group_min_size     = 1

# SSH Key for Worker Nodes (optional)
# key_pair_name = "my-eks-keypair"

# Additional Tags
additional_tags = {
  "CostCenter"  = "engineering"
  "Application" = "eks-cluster"
  "Team"        = "platform"
}